generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Meat {
  id          Int    @id @default(autoincrement())
  name        String
  description String
}

model Butcher {
  id          Int     @id @default(autoincrement())
  name        String
  street      String
  city        String
  state       String
  zipcode     String
  phonenumber String
  image_url   String?
  map_url     String?
  lat         String
  lng         String
}

model User {
  id         Int     @id @default(autoincrement())
  name       String
  email      String  @unique
  password   String
  stripeUser Boolean @default(false)
}

model Experience {
  id      Int      @id @default(autoincrement())
  butcher String
  meats   String[]
  price   String
  review  String
  date    String
  rating  Int
}
